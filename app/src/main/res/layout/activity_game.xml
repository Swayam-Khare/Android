<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/word_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/first_letter"
            style="@style/word_layout" />

        <TextView
            android:id="@+id/second_letter"
            style="@style/word_layout" />

        <TextView
            android:id="@+id/third_letter"
            style="@style/word_layout" />

        <TextView
            android:id="@+id/fourth_letter"
            style="@style/word_layout" />

        <TextView
            android:id="@+id/fifth_letter"
            style="@style/word_layout" />

    </LinearLayout>

    <EditText
        android:id="@+id/input_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:autofillHints="Enter Your Guess"
        android:background="@color/statusBarColor"
        android:hint="@string/enter_your_guess"
        android:inputType="textCapCharacters"
        android:maxLength="5"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textAlignment="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="22sp"
        tools:text="Hello" />

    <Button
        android:id="@+id/submit_button"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_below="@id/input_field"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/correct"
        android:text="@string/submit"
        android:textSize="18sp" />

</RelativeLayout>